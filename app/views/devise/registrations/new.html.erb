<%= render 'users/header3',user: @user %>
<div class="c">
<div class="container">
   <div class="row"> 
     <div class="col-sm-3">
           <%=form_for(@user) do |f| %>
      </div>
     <div class="col-sm-6">
      <h2 class="title_signup_display">会員登録</h2>
        <div class="row">
             <div class="form-group col-xs-6">
              <div class="field">
                <%= f.text_field :name, autofocus: true, autocomplete: "name",placeholder: "名前 (姓、名) ※スペース不要", class: "form-control" %>
              </div>
             </div>

              <div class="form-group hoge col-xs-6">
             <div class="field">
                <%= f.text_field :namekana, autofocus: true, autocomplete: "namekana",placeholder: "カタカナ (姓、名) ※スペース不要", class: "form-control" %>
              </div>
            </div>
          </div>


            <div class="row">
              <div class="form-group col-xs-6">
              <div class="field">
                <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname",placeholder: "ニックネーム ※最大６文字", class: "form-control" %>
              </div>
            </div>


              <div class="form-group col-xs-6">
                <div class="field">
                <%= f.text_field :postal, autofocus: true, autocomplete: "postsl",placeholder: "郵便番号 ※ハイフン不要", class: "form-control"%>
              </div>
            </div>
          </div>



             <div class="row">
             <div class="form-group col-xs-4">
              <div class="field">
                <%= f.text_field :phone, autofocus: true, autocomplete: "phone",placeholder: "電話番号", class: "form-control" %>
              </div>
            </div>

            <!-- <div class="edit_address_display"> -->
            <div class="form-group col-xs-8">
              <div class="field">
                <%= f.text_field :address, autofocus: true, autocomplete: "address",placeholder: "住所", class: "form-control" %>
              </div>
            </div>
          </div>


              <div class="form-group">
                <div class="field">
                <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス", class: "form-control" %>
              </div>
            </div>


            <div class="form-group">
              <div class="field">
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password",placeholder: "パスワード", class: "form-control" %>
              </div>
            </div>

              <div class="form-group">
                <div class="field">
                <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "パスワード確認", class: "form-control" %>
              </div>
            </div>

              <div class="actions">
                <div align="center"><%= f.submit "登録", class:"btn btn-default"  %></div>
              </div>
            <% end %>
          </div>
           <div class="col-sm-3"></div>
      </div>
    </div>
</div>
</div>
<%= render 'users/footer' %>
