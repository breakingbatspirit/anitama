<div class="nested-fields well well-compact">
  <div class="form-group">
    <%= f.label :"Disc" %>
    <%= f.number_field :disc_number, class:"form-control", placeholder:"", style:"width:60px" %><br>
  </div>

  <div class="songs">

    <!-- nested-fields -->
    <div class="nested-fields">
      <div class="">
        <table class="row table table-hover table-inverse" style="margin-left:15px; width:98%">
          <thead>
            <tr>
              <th class="col-xs-2">曲順</th>
              <th class="col-xs-4">曲名</th>
              <th class="col-xs-4">　アーティスト名</th>
              <th class="col-xs-1">　 </th>
            </tr>
          </thead>
        </table>
      </div>
    </div>

    <%= f.fields_for :songs do |song| %>
      <%= render 'song_fields', f: song %>
    <%end%>

    <div style="margin:10px; float:right">
      <%= link_to_add_association "追加", f, :songs, class:"btn btn-default", style:"margin-right:5px width:100%" %>
    </div>
  </div>

  <div>
    <%= link_to_remove_association "Discの削除", f, class:"btn btn-danger", style:"margin-top:15px;" %>
  </div>

</div>