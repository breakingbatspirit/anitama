<%= form_for @cd do |f| %>

  <div id="tasks">
    <%= f.fields_for :discs do |disc| %>
      <%= render 'disc_fields', f: disc %>
    <% end %>

    <div style="margin:20px">
      <%= link_to_add_association 'Discの追加',f, :discs, class:"btn btn-primary" %>
    </div>

    <div>
      <%= f.submit "商品の作成", class:"btn btn-lg btn-success" %>
    </div>
  </div>

<% end %>