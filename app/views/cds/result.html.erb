<%= render 'users/header4',user: @user %>

<div class="container">

<div class="row">
<div class="col-sm-1"></div>

<div class="col-sm-10">
<h1>検索結果一覧</h1>
<table class="table">
	<thead>
		<% @cds.each do |cd| %>
		<tr>
			<th class="image_result_display"><%= attachment_image_tag @user, :image, :fill,120,120, format: 'jpeg', size: "120x120", fallback: "no-image.jpg" %></th>
			<th class="album_result_display"><%= cd.album %></th>
			<th class="anime_title_result_display"><%= cd.anime.anime_title %></th>
			<th class="price_result_display"><%= cd.price %></th>
			<th class="inventory_result_display">
				<% if cd.inventory == 0 %>
					"在庫なし"
				<% else %>
				　　"在庫あり"
		     </th>
		     <% end %>
		</tr>
	</thead>
		<tbody>
		<tr>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
		</tr>
	<% end %>
		</tbody>
</table>
</div>
<div class="col-sm-1"></div>

</div>
</div>




