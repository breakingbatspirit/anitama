<%= render 'users/header3',user: @user %>
<div class="row">
  <div class="col-lg-4"></div>
      <div class="col-lg-4">
            <h2 class="title_new_display">ログイン</h2>

            <div class="form_new_display">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="field">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "email", class: "form-control" %>
                  </div></br>

                  <div class="field">
                        <%= f.password_field :password, autocomplete: "current-password",placeholder: "パスワード",  class: "form-control" %>
                  </div></br>

                  <% if devise_mapping.rememberable? %>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :ログイン状態を保存する %>
                      </div>
                  <% end %>

                  <div class="actions">
                      <div align="right"><%= f.submit "ログイン", class:"btn btn-default" %></div>
                  </div>
              <% end %>
           </div>
      <div class="col-lg-4"></div>
    </div>
</div>
<%= render 'users/footer' %>

