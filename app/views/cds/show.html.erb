
 <%= render 'users/header4',user: @user %>



<div class="container">
	<h1>商品詳細</h1>
	<div class="row" style="margin-top:30px;">
		<!-- ３分割の左側 -->
		<div class="col-lg-4">

			<%= attachment_image_tag @cd, :cd_image,　format: 'jpeg', fallback: "cd.jpg", size: "360x360" %>
			<div class="price">¥<%= @cd.price%></div>
			<% if @cd.inventory == 0 %>
				<div class="inventory0">在庫なし</div>
			<% else %>
				<div class="inventory">在庫あり</div>
			<% end %>
			<% if @user == current_user %>
				<%= form_for(@cart) do |f| %>
				<%= f.hidden_field :cd_id, :value => params[:id] %>
				<%= f.submit 'カートに入れる', class: "btn btn-info glyphicon "%>
				<% end %>
			<else>

			<% end %>

			<div class="new">
				<h3>最新情報</h3>
				<div class="new-list">
						<% @cds.each do |cd| %>
							<div class="new-list-content">
								<%= attachment_image_tag cd, :cd_image,　format: 'jpeg', fallback: "cd.jpg", size: "250x250" %>
							</div>
						<% end %>
				</div>
			</div>
		</div>
		<!-- ３分割の中央 -->
		<div class="col-lg-4" >
				<blockquote class="album-title" >
					<h3><%= @cd.album %></h3>
				</blockquote>
				<div class="cd-content">
					<div class="cd-text-list">
						<div class="cd-text"><h5><span class="glyphicon glyphicon-facetime-video" aria-hidden="true"></span>　<%= @cd.anime.anime_title %></h5></div>
						<div class="cd-text"><h5><span class="glyphicon glyphicon-home" aria-hidden="true"></span>　<%= @cd.label.label_name %></h5></div>
						<div class="cd-text"><h5><span class="glyphicon glyphicon-tag" aria-hidden="true"></span>　ジャンル</h5></div>
					</div>
					<div class ="song-list">
						<% @cd.discs.each do |disc| %>
								<div class="disc">
									<p>--------------------------------------------------------------</p>
									<h5>Disc:<%= disc.disc_number %></h5></div>
								<% disc.songs.each do |song| %>
									<div class="song"><h7><%= song.title %>/<%= song.artist.artist_name %></h7></div>
								<% end %>
						<% end %>
					</div>
				</div>
		</div>
		<!-- ３分割の右側 -->
		<div class="col-lg-4" style="padding-top:70px;">
			<div class ="chat-container">
				  <div class="chats" id="chats">
					    <ul class="list-group">
					      <%= render @chats %>
					    </ul>
  				  </div>
  				  <div class="form-group">
      					<input type="text" class="form-control" id="chat-input" value="<% @cd.id %>" >
      					<input type="hidden" class="form-control" id="chat-input2" value="<%= @user.id %>" >
    				</div>
    				<button id="button" class="btn btn-primary">送信</button>
				 </div>
		    </div>
		</div>
	</div>

</div>

<%= render 'users/footer' ,user: @user %>
