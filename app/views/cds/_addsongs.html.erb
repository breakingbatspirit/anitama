<h1>New Project</h1>


<%= form_for @cd do |f| %>
  <div class="field">
    <%= f.label :name, "name" %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, "description" %>
    <%= f.text_field :description %>
  </div>
  <h3>Tasks</h3>
  <div id="tasks">
    <%= f.fields_for :tasks do |task| %>
      <%= render 'task_fields', f: task %>
    <% end %>
    <div id="links">

      <%= link_to_add_association 'add task',f, :tasks %>
    </div>
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', projects_path %>