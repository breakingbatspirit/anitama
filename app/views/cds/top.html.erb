<!-- header -->
 <%= render 'users/header3',user: @user %>




  <div class="top-container">
    <!-- 上半分 -->
    <div class="top-upper-container">

      <div class="top-title">
        <span class="top-title-text">
          <strong>#やめられない★とまらない♪</strong>
        </span>
        <div class="top-title-visual">
          <%= image_tag 'anison.jpg', class: "top-title-visual" %>
        </div>
      </div>

      <%= search_form_for  @search, url: cds_result_path do |f| %>
        <input type="text" cd="q[name_cont]" style="width: 60%; height: 50px; froat-align:center; margin-left:270px; " name="q">
        <%= f.submit  "検索" , class: "btn btn-default btn-sm" %>
     <% end %>

      <!-- 検索バーの代わり。導入したら削除 -->
     

    </div>

    <!-- 下半分 -->
    <div class="top-lower-container clearfix">

      <!-- CDジャケット挿入 -->
      <% if @cds.present? %>
        <% @cds.order('updated_at DESC').limit(6).each do |image| %>
          <%= attachment_image_tag image, :cd_image, :fill, 200, 200, fallback: "cd.jpg", class: "top-cd-images" %>
          <%#= attachment_image_tag Cd.find(7), :cd_image, :fill, 200, 200, fallback: "no-image.jpeg" %>
        <% end %>
      <% else %>
        <%= image_tag 'nC1.jpeg', class: "top-cd-images" %>
        <%= image_tag 'cd.jpg', class: "top-cd-images" %>
        <%= image_tag 'no-image.jpeg', class: "top-cd-images" %>
        <%= image_tag 'cute-but-no-deploy2.jpeg', class: "top-cd-images" %>
        <%= image_tag 'sample-t.png', class: "top-cd-images" %>
        <%= image_tag 'sample-m.png', class: "top-cd-images" %>
      <% end %>

    </div>
  </div>




    <!-- footer -->
    <%= render 'users/footer' %>