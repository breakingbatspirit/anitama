<!-- headerイメージ(古い版) -->
<header style="width:100%; height:90px; background-color:black">
  <div style="color:white; float:left; padding-left:40px; font-size:20px; line-height: 90px">管理者用のヘッダー</div>
    <div style="color:white; padding:40px; float:right; font-size:25px; line-height: 0">
    </div>
</header>



<div class="container">

    <h1 class="cds-new-title">商品追加</h1>

    <!-- Cdモデル以外に送る右上の部分 -->
    <div class="upper-cont-right">
      <%= render 'form_newrecord', cd: @cd %>
    </div>

    <!-- Cdモデルに送るほか全部 -->
      <%= render 'form', cd: @cd %>
      <%#= link_to 'Back', root_path %>

</div>





<div style="margin: 200px 0; border-top:10px dotted grey">
<!-- (仮)要素が新規追加されたか確認のためのフォーム -->
<div style="margin:20px 20px 0">
  <p>↓（仮）新規追加確認用</p>

  <div class="dropdown">
    <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
      アニメ名を選択
      <span class="caret"></span>
    </button>

    <ul class="dropdown-menu" role="menu">
      <li role="presentation">
        <% if @animes.present? %>
          <% @animes.each do |anime| %>
            <p><%= anime.anime_title %></p>
          <% end %>
        <% end %>
      </li>
    </ul>
  </div>
</div>
<!-- ここまで -->
